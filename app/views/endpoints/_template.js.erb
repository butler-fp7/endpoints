// Templates used for HTML elements
var Templates = {

    url: '\
    <a data-parent="#api" href="#{href}"">\
        {url}\
    </a>',

    name: '{name}',

    description: '{description}',

    method: '<span class="method label label-primary label-{methodClass}">{method}</span>',

    head: '\
    <div class="page-header">\
        <h1>{name} <small id="description"></small><%= "<span class=\"options\">(or #{link_to("edit it", edit_endpoint_path(@endpoint))})</span>".html_safe if editable?(@endpoint)%></h1>\
    </div>\
    <div class="endpoint">\
        <div class="">\
            <h5>\
                {method}\
                {url}\
            </h5>\
            <% unless @endpoint.new_record? -%>
            <%= link_to icon("export", "Export code"), "", :class => "btn btn-primary btn-xs btn-export", "data-endpoint-id" => @endpoint.public_id %>\
            <br/>\
            <code id="export-<%= @endpoint.public_id %>">\
            <textarea style="clear: both;"><iframe allowfullscreen frameborder="0" height="500" src="<%= widget_url(@endpoint.public_id) %>" width="800"></iframe></textarea>\
            </code>\
            <% end -%>
        </div>\
    </div>\
    ',

    body: '\
    <div id="{id}" data-service="{dataService}" class="">\
        <div class="">\
            <form id="request-sender" onsubmit="API.submit(event)">\
                {params}\
                {headers}\
                <button class="btn" type="submit"><i class="glyphicon glyphicon-play"></i> Test</button>\
                {editbutton}\
                {deletebutton}\
            </form>\
            <ul class="response nav nav-tabs" onsubmit="API.submit(event)">\
                <li class="active">\
                    <a data-toggle="tab" href="">Response</a>\
                </li>\
            </ul>\
            <div class="tab_content">\
                <div class="response json">\
                    <iframe style="border:none;width:100%;"></iframe>\
                </div>\
            </div>\
        </div>\
    </div>\
    ',

    param: '\
    <tr>\
        <td>\
            {name}\
        </td>\
        <td>\
            <input type="text" class="form-control" value="{value}" required />\
        </td>\
        <td>\
            {description}\
        </td>\
        <td>\
            {type}\
        </td>\
    </tr>\
    ',

    params: '\
    <div id="params">\
        <h3>Parameters</h3>\
        <table class="table table-striped table-condensed operation-params">\
            <tr class="muted">\
                <th>Parameter</th>\
                <th>Value</th>\
                <th>Description</th>\
                <th>Type</th>\
            </tr>\
            {params}\
        </table>\
    </div>\
    ',

    header: '\
    <tr>\
        <td>\
            {name}\
        </td>\
        <td>\
            <input type="text" class="form-control" value="{value}" required />\
        </td>\
        <td>\
            {description}\
        </td>\
    </tr>\
    ',

    headers: '\
    <div id="request-location"></div>\
    <h3>Headers</h3>\
    <table class="table table-striped table-condensed operation-headers">\
        <tr class="muted">\
            <th>Header</th>\
            <th>Value</th>\
            <th>Description</th>\
        </tr>\
        {headers}\
    </table>\
    ',

    service: '\
    <div class="accordion-group">\
        {head}\
        {body}\
    </div>\
    ',

    api: '\
    <div class="accordion" id="api">\
        {services}\
    </div>\
    '
};
